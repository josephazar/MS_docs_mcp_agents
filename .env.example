# Azure OpenAI Configuration
# Get these values from your Azure OpenAI resource in the Azure Portal

# Your Azure OpenAI endpoint URL
AZURE_OPENAI_ENDPOINT=https://your-resource-name.openai.azure.com

# Your Azure OpenAI API key
AZURE_OPENAI_API_KEY=your-api-key-here

# API version (recommended: 2024-12-01-preview)
AZURE_OPENAI_API_VERSION=2024-12-01-preview

# Your deployed model name (e.g., gpt-4o-mini, gpt-4, gpt-35-turbo)
AZURE_OPENAI_DEPLOYMENT_NAME=your-deployment-name
AZURE_OPENAI_CHAT_DEPLOYMENT_NAME=your-deployment-name

# Optional: Embedding deployment name (if using embeddings)
AZURE_OPENAI_EMBEDDING_DEPLOYMENT=your-embedding-deployment-name
